{
  "name": "Cookie Monster",
  "version": "1.0.0",
  "description": "DEF CON workshop template for demonstrating malicious Chrome extension techniques â€” for educational and ethical hacking purposes only.",
  "manifest_version": 3,
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Cookie Monster",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.bundle.js"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  },
  "permissions": ["cookies", "tabs", "storage"],
  "host_permissions": ["<all_urls>"]
}
