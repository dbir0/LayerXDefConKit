{
  "name": "LayerXDefConKit",
  "version": "1.0.0",
  "description": "DEF CON workshop template for demonstrating malicious Chrome extension techniques â€” for educational and ethical hacking purposes only.",
  "manifest_version": 3,
  "action": {
    "default_popup": "popup.html",
    "default_title": "Open"
  },
  "background": {
    "service_worker": "background.bundle.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.bundle.js"],
      "all_frames": true,
      "run_at": "document_start"
    },
    {
      "matches": ["<all_urls>"],
      "js": ["fetch-override.js"],
      "all_frames": true,
      "run_at": "document_start",
      "world": "MAIN"
    }
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  },
  "permissions": ["cookies", "tabs", "storage"],
  "host_permissions": ["<all_urls>"]
}
